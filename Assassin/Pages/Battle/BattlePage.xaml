<Page x:Class="Assassin.Pages.Battle.BattlePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Battle"
      Loaded="BattlePage_OnLoaded"
      Style="{StaticResource PageStyle}">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <GroupBox x:Name="GrpUser" Grid.Column="0" Grid.Row="0" Header="{Binding Path=Name}" Margin="0,0,20,20" Padding="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Column="0" Grid.Row="0" Width="100" Text="Endurance" TextAlignment="Center" Margin="0,0,10,5" />
                <TextBlock Grid.Column="1" Grid.Row="0" Width="150" Text="{Binding Path=EnduranceToString}" TextAlignment="Center" Margin="0,0,0,5" />
                <TextBlock Grid.Column="0" Grid.Row="1" Width="100" Text="Status" TextAlignment="Center" Margin="0,0,10,5" />
                <TextBlock x:Name="LblPlayerStatus" Grid.Column="1" Grid.Row="1" Width="150" Text="{Binding Path=PlayerStaminaToString}" TextAlignment="Center" Margin="0,0,0,5" />
                <TextBlock Grid.Column="0" Grid.Row="2" Width="100" Text="Weapon" TextAlignment="Center" Margin="0,0,10,5" />
                <TextBlock Grid.Column="1" Grid.Row="2" Width="150" Text="{Binding Path=SelectedWeapon}" TextAlignment="Center" Margin="0,0,0,5" />
                <TextBlock Grid.Column="0" Grid.Row="3" Width="100" Text="Armor" TextAlignment="Center" VerticalAlignment="Center" Margin="0,0,10,0" />
                <TextBlock Grid.Column="1" Grid.Row="3" Width="150" Text="{Binding Path=Armor}" TextAlignment="Center" VerticalAlignment="Center" />
            </Grid>
        </GroupBox>
        <GroupBox x:Name="GrpEnemy" Grid.Column="1" Grid.Row="0" Header="{Binding Path=Name}" Margin="0,0,0,20" Padding="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Column="0" Grid.Row="0" Width="100" Text="Endurance" TextAlignment="Center" Margin="0,0,10,5" />
                <TextBlock Grid.Column="1" Grid.Row="0" Width="150" Text="{Binding Path=EnduranceToString}" TextAlignment="Center" Margin="0,0,0,5" />
                <TextBlock Grid.Column="0" Grid.Row="1" Width="100" Text="Status" TextAlignment="Center" Margin="0,0,10,5" />
                <TextBlock x:Name="LblEnemyStatus" Grid.Column="1" Grid.Row="1" Width="150" Text="{Binding Path=EnemyStaminaToString}" TextAlignment="Center" Margin="0,0,0,5" />
                <TextBlock Grid.Column="0" Grid.Row="2" Width="100" Text="Weapon" TextAlignment="Center" Margin="0,0,10,5" />
                <TextBlock Grid.Column="1" Grid.Row="2" Width="150" Text="{Binding Path=Weapon}" TextAlignment="Center" Margin="0,0,0,5" />
                <TextBlock Grid.Column="0" Grid.Row="3" Width="100" Text="Armor" TextAlignment="Center" VerticalAlignment="Center" Margin="0,0,10,0" />
                <TextBlock Grid.Column="1" Grid.Row="3" Width="150" Text="{Binding Path=Armor}" TextAlignment="Center" VerticalAlignment="Center" />
            </Grid>
        </GroupBox>
        <TextBox x:Name="TxtBattle" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="4" Width="576" Height="200" BorderThickness="1" IsReadOnly="True" TextWrapping="Wrap" Margin="0,0,0,20" ScrollViewer.VerticalScrollBarVisibility="Visible" />
        <Grid Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Button x:Name="BtnAttack" Grid.Column="0" Grid.Row="0" Width="135" Content="_Attack" Click="BtnAttack_Click" IsDefault="True" Margin="0,0,12,12" />
            <Button x:Name="BtnBerserk" Grid.Column="1" Grid.Row="0" Width="135" Click="BtnBerserk_Click" Content="_Berserk" Margin="0,0,12,12" />
            <Button x:Name="BtnDefend" Grid.Column="2" Grid.Row="0" Width="135" Content="_Defend" Click="BtnDefend_Click" Margin="0,0,12,12" />
            <Button x:Name="BtnFlee" Grid.Column="3" Grid.Row="0" Width="135" Content="_Flee" Margin="0,0,0,12" />
            <Button x:Name="BtnLunge" Grid.Column="0" Grid.Row="1" Width="135" Content="_Lunge" Click="BtnLunge_Click" Margin="0,0,12,12" />
            <Button x:Name="BtnParry" Grid.Column="1" Grid.Row="1" Width="135" Content="_Parry" Click="BtnParry_Click" Margin="0,0,12,12" />
            <Button x:Name="BtnQuickCombat" Grid.Column="2" Grid.Row="1" Width="135" Content="_Quick Combat" Click="BtnQuickCombat_Click" Margin="0,0,12,12" />
            <Button x:Name="BtnInventory" Grid.Column="3" Grid.Row="1" Width="135" Content="_Inventory" Click="BtnInventory_Click" Margin="0,0,0,12" />
            <Button x:Name="BtnExit" Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="4" Width="135" Content="E_xit" IsCancel="True" IsEnabled="False" Click="BtnExit_Click" />
        </Grid>
    </Grid>
</Page>