<Page x:Class="Assassin.Views.Guilds.ManageApplicationsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Assassin - Manage Guild Applications"
      Loaded="Page_Loaded"
      Style="{StaticResource PageStyle}">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <ListBox x:Name="LstApplications" Width="350" Height="500" SelectionChanged="LstApplications_SelectionChanged" ScrollViewer.VerticalScrollBarVisibility="Visible" Margin="0,0,0,10" />
        <Button x:Name="BtnApprove" Content="_Approve" Width="200" Click="BtnApprove_Click" IsDefault="True" IsEnabled="False" Margin="0,0,0,10" />
        <Button x:Name="BtnDeny" Content="_Deny" Width="200" Click="BtnDeny_Click" IsEnabled="False" Margin="0,0,0,10" />
        <Button x:Name="BtnBack" Content="_Back" Click="BtnBack_Click" Width="200" IsCancel="True" />
    </StackPanel>
</Page>