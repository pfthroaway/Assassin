<Page x:Class="Assassin.Views.Admin.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Assassin - Admin"
      Style="{StaticResource PageStyle}">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="Admin" TextAlignment="Center" Margin="0,0,0,10" />
        <Button x:Name="BtnManageEnemies" Width="300" Content="Manage _Enemies" Click="BtnManageEnemies_Click" Margin="0,0,0,10" />
        <Button x:Name="BtnManageGuilds" Width="300" Content="Manage _Guilds" Click="BtnManageGuilds_Click" Margin="0,0,0,10" />
        <Button x:Name="BtnManageUsers" Width="300" Content="Manage _Users" Click="BtnManageUsers_Click" Margin="0,0,0,10" />
        <Button x:Name="BtnChangePassword" Width="300" Content="_Change Password" Click="BtnChangePassword_Click" Margin="0,0,0,10" />
        <Button x:Name="BtnBack" Width="300" Content="Back" Click="BtnBack_Click" IsCancel="True" />
    </StackPanel>
</Page>