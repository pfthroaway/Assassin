<Page x:Class="Assassin.Views.City.JobsPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Jobs"
        Style="{StaticResource PageStyle}">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBox x:Name="TxtJob" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" Height="200" Width="620" Margin="0,0,0,10" />
        <Button x:Name="BtnAccept" Grid.Column="0" Grid.Row="1" Width="200" Click="BtnAccept_Click" Content="_Accept" IsDefault="True" Margin="0,0,5,0" />
        <Button x:Name="BtnDecline" Grid.Column="1" Grid.Row="1" Width="200" Click="BtnDecline_Click" Content="_Decline" Margin="5,0,5,0" />
        <Button x:Name="BtnLeaveTable" Grid.Column="2" Grid.Row="1" Width="200" Click="BtnLeaveTable_Click" Content="_Leave Table" IsCancel="True" Margin="5,0,0,0" />
    </Grid>
</Page>