<Page x:Class="Assassin.Views.City.MembersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      Loaded="Page_Loaded"
      Title="Members"
      Style="{StaticResource PageStyle}">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <ListBox x:Name="LstMembers" Width="350" Height="500" SelectionChanged="LstMembers_SelectionChanged" Margin="0,0,0,10" />
        <Button x:Name="BtnMessage" Width="200" Content="_Message" Click="BtnMessage_Click" IsDefault="True" IsEnabled="False" Margin="0,0,0,10" />
        <Button x:Name="BtnExpel" Width="200" Content="_Expel" Click="BtnExpel_Click" IsEnabled="False" Visibility="Collapsed" Margin="0,0,0,10" />
        <Button x:Name="BtnAttack" Width="200" Content="_Attack" Click="BtnAttack_Click" IsEnabled="False" Margin="0,0,0,10" />
        <Button x:Name="BtnBack" Width="200" Content="_Back" Click="BtnBack_Click" IsCancel="True" />
    </StackPanel>
</Page>