<Page x:Class="Assassin.Views.Shopping.ArmoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="The Armoury"
      Style="{StaticResource PageStyle}"
      Loaded="Page_Loaded">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ListBox x:Name="LstArmor" Grid.Column="0" Grid.Row="0" Width="225" Height="245" ScrollViewer.VerticalScrollBarVisibility="Visible" ItemsSource="{Binding}" SelectionChanged="LstArmor_SelectionChanged" Margin="0,0,20,10" />
        <TextBox x:Name="TxtArmor" Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="2" Width="456" Height="245" ScrollViewer.VerticalScrollBarVisibility="Visible" IsReadOnly="True" TextWrapping="Wrap" Margin="0,0,0,10" />
        <GroupBox x:Name="GrpSelected" Grid.Column="1" Grid.Row="1" Header="Selected Armor" Margin="0,0,10,10" Padding="5">
            <StackPanel>
                <TextBlock x:Name="LblSelectedArmor" Width="200" Text="{Binding Name}" TextAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,10" />
                <TextBlock x:Name="LblSelectedDefense" Width="200" Text="{Binding DefenseToStringWithText}" TextAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,10" />
                <TextBlock x:Name="LblSelectedValue" Width="200" Text="{Binding ValueToStringWithText}" TextAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,20" />
                <Button x:Name="BtnPurchase" Grid.Row="4" Width="145" Click="BtnPurchase_Click" Content="_Purchase" IsEnabled="False" />
            </StackPanel>
        </GroupBox>
        <GroupBox x:Name="GrpCurrent" Grid.Column="2" Grid.Row="1" Header="Current Armor" Margin="0,0,0,10" Padding="5">
            <StackPanel>
                <TextBlock x:Name="LblCurrentArmor" Width="200" Text="{Binding Name}" TextAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,10" />
                <TextBlock x:Name="LblCurrentDefense" Width="200" Text="{Binding DefenseToStringWithText}" TextAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,10" />
                <TextBlock x:Name="LblCurrentSellValue" Width="200" Text="{Binding SellValueToStringWithText}" TextAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,20" />
                <Button x:Name="BtnSell" Width="145" Click="BtnSell_Click" Content="_Sell" IsEnabled="False" />
            </StackPanel>
        </GroupBox>
        <TextBlock Grid.Column="0" Grid.Row="1" Text="{Binding Path=GoldOnHandToStringWithText}" TextAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,20,10" />
        <Button x:Name="BtnBack" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="3" Width="145" Content="_Back" HorizontalAlignment="Center" IsCancel="True" Click="BtnBack_Click" />
    </Grid>
</Page>