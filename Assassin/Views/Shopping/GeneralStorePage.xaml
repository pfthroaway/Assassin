<Page x:Class="Assassin.Views.Shopping.GeneralStorePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      Style="{StaticResource PageStyle}"
      Title="Assassin - The General Store">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBox x:Name="TxtGeneralStore" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Width="770" Height="400" TextWrapping="Wrap" IsReadOnly="True" Margin="0,0,0,10" />
        <TextBlock Text="{Binding GoldOnHandToStringWithText}" TextAlignment="Center" Margin="0,0,0,10" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="BtnShovel" Width="250" Content="Purchase _Shovel" Click="BtnShovel_Click" Margin="0,0,10,0" />
            <Button x:Name="BtnLantern" Width="250" Content="Purchase _Lantern" Click="BtnLantern_Click" Margin="0,0,10,0" />
            <Button x:Name="BtnBack" Width="250" Content="_Back" Click="BtnBack_Click" IsCancel="True" />
        </StackPanel>
    </StackPanel>
</Page>